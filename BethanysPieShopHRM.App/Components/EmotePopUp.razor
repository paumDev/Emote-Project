@if (_Emote != null)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Emote PopUp</h5>
                    <button type="button" class="close btn btn-lg" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col row">
                        <div class="col-12 col-sm-8">
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Emote ID</label>
                                <div class="col-sm-7">
                                    <label type="text" class="form-control-plaintext">@_Emote.EmoteId</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Name</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_Emote.Name</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Creation Date</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_Emote.CreationDate.ToShortDateString()</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">User</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@UserDetails.UserName</label>
                                </div>
                            </div> 
                            
                        </div>
                    </div>
                    <button type="button" class="buttonOptCards buttonOptCards-alarm2" @onclick="@Close">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@page "/emotedetail/{EmoteId}"
@inject NavigationManager NavigationManager;


<section class="employee-detail">
    <h1 class="page-title">Details for @Emote.Name</h1>
    <br />
    <div class="col-12 row">
        <div class="col-2 text-center">
            <img src="@Emote.ImageName" class="img-fluid rounded mx-auto d-block" alt="Emote Image">
        </div>
        <a class="editBtn" href="@($"/emoteedit/{Emote.EmoteId}")">
            <svg height="1em" viewBox="0 0 512 512">
                <path d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z"></path>
            </svg>
        </a>
        <button class="buttonOptCards buttonOptCards-save" @onclick="DownloadImage">Download</button>
        <button class="buttonOptCards buttonOptCards-save" @onclick="OpenModal">Historial</button>
        <PopUpHistory EmoteId="selectedEmoteId" IsVisible="showModal" OnClose="HandleModalClose" />
        <button class="buttonOptCards" @onclick="@(() => NavigationManager.NavigateTo($"/emotes"))">Emotes</button>
        <div class="col-10 row">
            <div class="col-12 col-xxl-8">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Emote ID</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Emote.EmoteId</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Name</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Emote.Name</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Description</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Emote.Description</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Creation Date</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Emote.CreationDate.ToShortDateString()</label>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Weight</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Emote.Weight</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">User</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@User.UserName</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Width</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Emote.Width</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Height</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Emote.Height</label>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Version</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Emote.Version</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Status</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Emote.Status</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Approved</label>
                    <div class="col-sm-8">

                        @if (Emote.Approved)
                        {
                            <label type="text" readonly class="form-control-plaintext">Yes</label>
                        }
                        else
                        {
                            <label type="text" readonly class="form-control-plaintext">No</label>

                        }
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Downloads</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Emote.NumDownload</label>
                    </div>
                </div>
            </div>
            <div class="col-12 col-xxl-4">
            </div>
        </div>
    </div>
</section>